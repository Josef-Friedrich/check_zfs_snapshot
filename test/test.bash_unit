#! /bin/sh

. ./lib/test-helper.sh

test_get_last_snapshot() {
	source_exec ../check_zfs_snapshot
	mock_path bin
	[ $(_get_last_snapshot ok_dataset) -eq 1502914537 ] || fail
}

test_ok() {
	mock_path bin
	../check_zfs_snapshot -d ok_dataset
}

test_warning() {
	mock_path bin
	! ../check_zfs_snapshot -d warning_dataset
}

test_critical() {
	mock_path bin
	! ../check_zfs_snapshot -d critical_dataset
}

test_function_count_snapshots_ok() {
	source_exec ../check_zfs_snapshot
	mock_path bin
	_count_snapshots ok_dataset
}

test_function_count_snapshots_warning() {
	source_exec ../check_zfs_snapshot
	mock_path bin
	_count_snapshots warning_dataset
}

test_function_count_snapshots_critical() {
	source_exec ../check_zfs_snapshot
	mock_path bin
	_count_snapshots critical_dataset
}
